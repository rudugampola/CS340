{{! Create a table }}
<table id="tours-table" class="main-table">
  <h2>
    Tours
  </h2>
  {{! Header section }}
  <thead>
    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      <th>
        Tour Id
      </th>
      <th>
        Tour Name
      </th>
      <th>
        Difficulty
      </th>
      <th>
        Price
      </th>
      <th>
        Description
      </th>
      <th>
        Location
      </th>
      <th>
        Image
      </th>
      <th>
        Date
      </th>
      <th>
        Delete
      </th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>
    {{! For each row, print the id, fname, lname, homeworld and age, in order }}
    {{#each data}}
      <tr data-value={{this.id}}>
        <td>
          {{this.id}}
        </td>
        <td>
          {{this.name}}
        </td>
        <td>
          {{this.difficulty}}
        </td>
        <td>
          {{this.price}}
        </td>
        <td>
          {{this.description}}
        </td>
        <td>
          {{this.location}}
        </td>
        <td>
          {{this.cover_image}}
        </td>
        <td>
          {{this.date}} 
        </td>
        <td>
          <button class="btn btn-danger" onclick="deleteTour({{this.id}})">
            Delete <i class="fa-solid fa-trash"></i>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<br />

