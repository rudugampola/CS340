<!-- main.hbs-->

<html>
  <head>
    <title>
      Gone On A Trip
    </title>
    <script
      src="https://kit.fontawesome.com/25ae4408a9.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" href="/img/goat.ico" type="image/x-icon" />
    <meta charset="utf-8" />
  </head>

  <body>
    <div class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="title">
          <img src="/img/goat.png" />
          <h1>
            Gone On a Trip
          </h1>
        </div>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a href="/" class="btn btn-outline-success me-2" type="button">
                <i class="fa-solid fa-house"></i>
                Home Page
              </a>
            </li>

            <li class="nav-item">
              <a
                class="btn btn-outline-success me-2"
                type="button"
                href="/customers"
              >
                <i class="fa-solid fa-user"></i>
                Customers
              </a>
            </li>

            <li class="nav-item">
              <a
                class="btn btn-outline-success me-2"
                type="button"
                href="/guides"
              >
                <i class="fa-solid fa-people-group"></i>
                Guides
              </a>
            </li>

            <li class="nav-item">
              <a
                class="btn btn-outline-success me-2"
                type="button"
                href="/tours"
              >
                <i class="fa-solid fa-truck-plane"></i>
                Tours
              </a>
            </li>

            <li class="nav-item">
              <a
                class="btn btn-outline-success me-2"
                type="button"
                href="/triplogs"
              >
                <i class="fa-regular fa-clipboard"></i>
                Trip Logs
              </a>
            </li>

            <li class="nav-item">
              <a
                class="btn btn-outline-success me-2"
                type="button"
                href="/reviews"
              >
                <i class="fa-brands fa-readme"></i>
                Reviews
              </a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
        </div>
      </div>
    </div>

    <br />
    {{{body}}}

    <div class="footer">
      <p class="footer__copyright">
        &copy; by Ravindu Udugampola / Roy Kim. All rights reserved.
      </p>
    </div>
  </body>
</html>