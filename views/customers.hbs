<div class="section">
  <h3 class="h3-create">
    Update Customer
  </h3>
  <form id="update-customer-form-ajax">
    <table class="sub-table">
      <tr>
        <td>
          <label for="input-fullname">
            Select a Customer to Update:
          </label>
        </td>
        <td>
          <select
            name="input-fullname"
            id="update-name"
            onChange="formFill(this)"
            required
          >
            <option value="test">
              Select a Customer
            </option>
            {{#each data}}
              <option value="{{this.id}}">
                {{this.lname}}, {{this.fname}}
              </option>
            {{/each}}
          </select>
        </td>
      </tr>

      <tr>
        <td>
          <label for="update-fname">
            First Name:
          </label>
        </td>
        <td>
          <input type="text" name="update-fname" id="update-fname" required />
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="update-lname">
            Last Name:
          </label>
        </td>
        <td>
          <input type="text" name="update-lname" id="update-lname" required />
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="update-phone">
            Phone Number:
          </label>
        </td>
        <td>
          <input type="text" name="update-phone" id="update-phone" required />
        </td>
        <td>
          *Required
