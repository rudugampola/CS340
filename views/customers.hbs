      <tr>
        <td>
          <label for="input-phone">
            Phone Number:
          </label>
        </td>
        <td>
          <input type="text" name="input-phone" id="input-phone" required />
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="input-email">
            Email:
          </label>
        </td>
        <td>
          <input type="text" name="input-email" id="input-email" />
        </td>
      </tr>

      <tr>
        <td>
          <label for="input-photo">
            Photo:
          </label>
        </td>
        <td>
          <input type="text" name="input-photo" id="input-photo" />
        </td>
      </tr>
    </table>

    <div class="form-btns">
      <input type="submit" />
      <input type="reset" />
    </div>
  </form>
</div>

