    </div>
  </form>
</div>
<br />

<script src="/js/delete.js"></script>
<script src="/js/updateCustomer.js"></script>

<script>
  function formFill(data) {
    // Update the form with the selected customer's data
    var id = data.value;
    updateCustomer(id)
    };
</script>