{{! Create a table }}
<table id="customers-table" class="main-table">
  <h2>
    Customers
  </h2>
  {{! Header section }}
  <thead>
    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      <th>
        Id
      </th>
      <th>
        First Name
      </th>
      <th>
        Last Name
      </th>
      <th>
        Phone
      </th>
      <th>
        Email
      </th>
      <th>
        Photo
      </th>
      <th>
        Delete
      </th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>
    {{! For each row, print the id, fname, lname, homeworld and age, in order }}
    {{#each data}}
      <tr>
        <td>
          {{this.id}}
        </td>
        <td>
          {{this.fname}}
        </td>
        <td>
          {{this.lname}}
        </td>
        <td>
          {{this.phone}}
        </td>
        <td>
          {{this.email}}
        </td>
        <td>
          {{this.photo}}
        </td>
        <td>
          <button onclick="deleteCustomer({{this.id}})">
            Delete
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

