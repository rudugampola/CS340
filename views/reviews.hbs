{{! Create a table }}
<table id='reviews-table'>

  {{! Header section }}
  <thead>

    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      <th>Id</th>
      <th>Date</th>
      <th>Review</th>
      <th>Customer Id</th>
      <th>Tour Id</th>
      <th>Rating</th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>

    {{! For each row, print the id, fname, lname, homeworld and age, in order }}
    {{#each data}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.date}}</td>
        <td>{{this.review}}</td>
        <td>{{this.customer_id}}</td>
        <td>{{this.tour_id}}</td>
        <td>{{this.rating}}</td>
        <td><button onclick="deleteReview({{this.id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="/js/delete.js"></script>

<!-- /views/index.hbs -->
<h2>Adding Data using an HTML form</h2>
<p>To add a new person, please enter their information below nad click `Submit`!</p>
<form id='add-review-form' method='POST' action='/add-review-form'>

  <label for='input-date'>Review Date: </label>
  <input type='date' name='input-date' id='input-date' />

  <label for='input-review'>Review: </label>
  <input type='text' name='input-review' id='input-review' />

    <label for='input-review-customer'>Customer: </label>
    <select name="input-review-customer" id="input-review-customer-ajax">
        <option value="">Select a Customer</option>
        {{#each results.customers}}
        <option value="{{this.id}}">{{this.lname}}, {{this.fname}} </option>
        {{/each}}
    </select>

    <label for='input-review-tour'>Tour: </label>
    <select name="input-review-tour" id="input-review-tour-ajax">
        <option value="">Select a Tour</option>
        {{#each results.tours}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label for='input-review-rating'>Rating: </label>
    <input type='text' name='input-review-rating' id='input-review-rating' />

  <input type='submit' />
</form>