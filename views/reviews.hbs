{{! Create a table }}
<table id="reviews-table" class="main-table">
  <h2>
    Reviews
  </h2>
  {{! Header section }}
  <thead>
    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      <th>
        Review Id
      </th>
      <th>
        Date
      </th>
      <th>
        Review
      </th>
      <th>
        Customer
      </th>
      <th>
        Tour
      </th>
      <th>
        Rating
      </th>
      <th>
        Delete
      </th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>
    {{! For each row, print the id, fname, lname, homeworld and age, in order }}
    {{#each data}}
      <tr "data-value"={{this.id}}>
        <td>
          {{this.id}}
        </td>
        <td>
          {{this.date}}
        </td>
        <td>
          {{this.review}}
        </td>
        <td>
          {{this.customerName}}
        </td>
        <td>
          {{this.tourName}}
        </td>
        <td>
          {{this.rating}}
        </td>
        <td>
          <button class="btn btn-danger" onclick="deleteReview({{this.id}})">
            Delete
            <i class="fa-solid fa-trash"></i>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="/js/delete.js"></script>
<br />

<!-- /views/index.hbs -->
<div class="section">
  <h3 class="h3-create">
    Create Review
  </h3>
  <form id="add-review-form" method="POST" action="/add-review-form">
    <table class="sub-table">
      <tr>
        <td>
          <label for="input-date">
            Review Date:
          </label>
        </td>
        <td>
          <input type="date" name="input-date" id="input-date" required />
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="input-review">
            Review:
          </label>
        </td>
        <td>
          <textarea
            name="input-review"
            id="input-review"
            required
            placeholder="Review"
          ></textarea>
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="input-review-customer">
            Customer:
          </label>
        </td>
        <td>
          <select
            name="input-review-customer"
            id="input-review-customer-ajax"
            required
          >
            <option value="">
              Select a Customer
            </option>
            {{#each results.customers}}
              <option value="{{this.id}}">
                {{this.lname}}, {{this.fname}}
              </option>
            {{/each}}
          </select>
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="input-review-tour">
            Tour:
          </label>
        </td>
        <td>
          <select name="input-review-tour" id="input-review-tour-ajax" required>
            <option value="">
              Select a Tour
            </option>
            {{#each results.tours}}
              <option value="{{this.id}}">
                {{this.name}}
              </option>
            {{/each}}
          </select>
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="input-review-rating">
            Rating:
          </label>
        </td>
        <td>
          <input
            type="text"
            name="input-review-rating"
            id="input-review-rating"
            required
            placeholder="Rating 1-5"
          />
        </td>
        <td>
          *Required
        </td>
      </tr>
    </table>

    <div class="form-btns">
      <input type="submit" class="btn btn-success" />
      <input type="reset" class="btn btn-danger" />
    </div>
  </form>
</div>

<br />