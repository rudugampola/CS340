<div class="section">
  <h3 class="h3-create">
    Search Guides
  </h3>
  <form id="search-guide" method="GET" action="/guides">
    <label for="input-lname">
      Search by Last Name:
    </label>
    <input
      type="text"
      name="lname"
      id="input-lname-search"
      placeholder="Last Name..."
    />

    <input type="submit" class="btn btn-success" />
    <input type="reset" class="btn btn-danger" />
  </form>
</div>

