{{! Create a table }}
<table id="guides-table" class="main-table">
  <h2>
    Guides
  </h2>
  {{! Header section }}
  <thead>
    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      <th>
        Guide Id
      </th>
      <th>
        First Name
      </th>
      <th>
        Last Name
      </th>
      <th>
        Phone
      </th>
      <th>
        Email
      </th>
      <th>
        Title
      </th>
      <th>
        Photo
      </th>
      <th>
        Delete
      </th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>
    {{! For each row, print the id, fname, lname, homeworld and age, in order }}
    {{#each data}}
      <tr data-value={{this.id}}>
        <td>
          {{this.id}}
        </td>
        <td>
          {{this.fname}}
        </td>
        <td>
          {{this.lname}}
        </td>
        <td>
          {{this.phone}}
        </td>
        <td>
          {{this.email}}
        </td>
        <td>
          {{this.title}}
        </td>
        <td>
          {{this.photo}}
        </td>
        <td>
          <button
            class="btn btn-danger"
            type="button"
            onclick="deleteGuide({{this.id}})"
          >
            Delete
            <i class="fa-solid fa-trash"></i>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

