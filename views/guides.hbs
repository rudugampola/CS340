{{! Create a table }}
<table id='guides-table'>

  {{! Header section }}
  <thead>

    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Title</th>
      <th>Photo</th>
      <th>Delete</th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>

    {{! For each row, print the id, fname, lname, homeworld and age, in order }}
    {{#each data}}
      <tr>
        <td>{{this.guide_id}}</td>
        <td>{{this.guide_fname}}</td>
        <td>{{this.guide_lname}}</td>
        <td>{{this.guide_phone}}</td>
        <td>{{this.guide_email}}</td>
        <td>{{this.title}}</td>
        <td>{{this.photo}}</td>
        <td><button onclick="deleteGuide({{this.guide_id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="/js/delete.js"></script>

