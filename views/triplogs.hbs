{{! Create a table }}
<table id="logs-table" class="main-table">
  <h2>
    Trip Logs
  </h2>
  {{! Header section }}
  <thead>
    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      <th>
        Log Id
      </th>
      <th>
        Customer
      </th>
      <th>
        Guide
      </th>
      <th>
        Tour
      </th>
      <th>
        Delete
      </th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>
    {{! For each row, print the id, fname, lname, homeworld and age, in order }}
    {{#each data}}
      <tr>
        <td>
          {{this.id}}
        </td>
        <td>
          {{!getCustomerName helper parameters are the customer_id and the maps.customerMap array}}
          {{this.customerName}}
        </td>
        <td>
          {{this.guideName}}
        </td>
        <td>
          {{this.tourName}}
        </td>
        <td>
          <button class="btn btn-danger" onclick="deleteTripLogs({{this.id}})">
            Delete
            <i class="fa-solid fa-trash"></i>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<pre>
  {{maps.CustomerMap}}
</pre>

<br />

<!-- /views/index.hbs -->
<div class="section">
  <h3 class="h3-create">
    Trip Logs
  </h3>
  <form id="add-log-form" method="POST" action="/add-log-form">
    <table class="sub-table">
      <tr>
        <td>
          <label for="input-log-customer">
            Customer:
          </label>
        </td>
        <td>
          <select
            name="input-log-customer"
            id="input-log-customer-ajax"
            required
          >
            <option value="">
              Select a Customer
            </option>
            {{#each results.customers}}
              <option value="{{this.id}}">
                {{this.lname}}, {{this.fname}}
              </option>
            {{/each}}
          </select>
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="input-log-tour">
            Tour:
          </label>
        </td>
        <td>
          <select name="input-log-tour" id="input-log-tour-ajax" required>
            <option value="">
              Select a Tour
            </option>
            {{#each results.tours}}
              <option value="{{this.id}}">
                {{this.name}}
              </option>
            {{/each}}
          </select>
        </td>
        <td>
          *Required
        </td>
      </tr>

      <tr>
        <td>
          <label for="input-log-guide">
            Guide:
          </label>
        </td>
        <td>
          <select name="input-log-guide" id="input-log-guide-ajax" required>
            <option value="">
              Select a Guide
            </option>
            {{#each results.guides}}
              <option value="{{this.id}}">
                {{this.lname}}, {{this.fname}}
              </option>
            {{/each}}
          </select>
        </td>
        <td>
          *Required
        </td>
      </tr>
    </table>

    <div class="form-btns">
      <input type="submit" class="btn btn-success" />
      <input type="reset" class="btn btn-danger"/>
    </div>
  </form>
</div>

<br />

<script src="/js/delete.js"></script>